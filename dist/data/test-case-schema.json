{
	"title": "Configuration Schema",
	"type": "object",
	"properties": {
		"name": {
			"type": "string"
		},
		"base-url": {
			"type": "string"
		},
		"steps": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"requires": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"request": {
						"type": "object",
						"properties": {
							"url": {
								"type": "string"
							},
							"method": {
								"type": "string",
								"enum": ["POST",
									"GET",
									"PUT",
									"PATCH",
									"DELETE",
									"HEAD"]
							},
							"headers": {
								"type": "object"
							},
							"query": {
								"type": "object"
							},
							"data": {
								"type": ["string", "object"]
							},
							"form": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"key": {
											"type": "string"
										},
										"value": {
											"type": "string"
										}
									}
								}
							}
						},
						"required": ["url", "method"]
					},
					"response": {
						"type": "object"
					}
				},
				"required": ["name", "request"]
			}
		}
	},
	"required": ["name"]
}
